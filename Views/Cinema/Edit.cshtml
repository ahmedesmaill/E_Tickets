@{
}
@model Cinema
<div class="row">
    <div class="col-12 mb-3">
        <h2><a href="/Cinema/Index"><i class="bi bi-arrow-left"></i></a> Edit Cinema @Model.Name</h2>
    </div>
</div>

<div class="row">
    <form action="/Cinema/Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id">
        <div class="mb-3">
            <label for="exampleCinemaName" class="form-label">Cinema Name</label>
            <input type="text" class="form-control" id="exampleCinemaName" name="Name" value="@Model.Name">

            <label for="exampleCinemaDescription" class="form-label"> Description</label>
            <input type="text" class="form-control" id="exampleCinemaDescription" name="Description" value="@Model.Description" >

            <label for="exampleCinemaAddress" class="form-label">Cinema Address</label>
            <input type="text" class="form-control" id="exampleCinemaAddress" name="Address" value="@Model.Address">

            @*  <span asp-validation-for="@Model.Name"></span> *@
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>